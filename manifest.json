{
    "manifest_version": 2,
    "name": "QR二维码生成",
    "description": "生成当前网页URL的二维码，自动将本地(localhost/127.0.0.1)域名替换为对外的IP，也能生成指定URL/文件内容。",
    "version": "1.2.7",
    "background": { "scripts": ["js/background.js"] },
    "permissions": ["tabs"],
    "icons": {
        "128": "icon/128.png",
        "16": "icon/16.png",
        "48": "icon/48.png"
    },
    "page_action": {
        "default_icon": {
            "19": "icon/19.png",
            "38": "icon/38.png"
        },
        "default_popup": "popup.html"
    }
}
